                        </td>
                        <td>
                            if Temporary
                        </td>
                        @if (SFF.one[0].RequestType == "Temporary")
                        {
                            <td>
                                <span style="display: flex; align-items: baseline;">From <input type="text" style="height: 25px; border-radius: 0; margin-right: 5px; margin-left: 5px; width: 98%; "  value="@(SFF.one[0].TempFrom.ToString("yyyy-MM-dd"))" /></span>
                            </td>
                            <td>
                                <span style="display: flex; align-items: baseline;"> To <input type="text" style="height: 25px; border-radius:0; margin-left: 5px; width: 100%; " value="@(SFF.one[0].TempTo.ToString("yyyy-MM-dd"))" /></span>
                            </td>
                        }

