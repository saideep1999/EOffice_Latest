                                <lable>Add & Remove Members</lable>
                                <table cellpadding="2" cellspacing="0" border="1" width="90%">
                                    <tr>
                                        <th style="width: 40%;">
                                            User ID
                                        </th>
                                        <th width="40%">
                                            Permissions Needed
                                        </th>
                                        <th width="20%">
                                            Remove Access
                                        </th>

                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text" style="height: 15px; border-radius: 0; width: 95%;" />
                                        </td>
                                        <td style="text-align: center;">
                                            <input type="checkbox" id="read" name="chkTyprEmp" value="Read" /> Read

                                            <input type="checkbox" id="write" name="chkTyprEmp" value="Write" /> Write
                                        </td>
                                        <td style="text-align: center;">
                                            <input type="checkbox" id="remove" name="chkTyprEmp" value="remove" /> Remove
                                        </td>

                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td style="height: 25px;">
                        </td>
                    </tr>

                    <tr>

                        <td colspan="6" style="text-align: center;">
                            <table cellpadding="0" cellspacing="0" border="1" width="100%">
                                <tr>
                                    <td colspan="2" width="50%" style="height: 30px;">
                                        <lable>Requester Signature</lable>
                                    </td>
                                    <td colspan="2" width="50%" style="height: 30px;">
                                        <lable>Only for new folder creation/Additional space allocation/Owner Change</lable>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="height: 30px;">
                                        Requester Signature
                                    </td>
                                    <td style="height: 30px;">
