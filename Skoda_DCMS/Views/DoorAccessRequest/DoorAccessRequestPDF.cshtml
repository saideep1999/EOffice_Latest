                            <td colspan="2" align='left'>
                                <span style="height: 25px; font-weight: normal; width: 85%; border-radius: 0; "> @(DARF.one[0].OtherEmployeeDepartment) </span>
                            </td>
                            <td style="width:20%; font-weight: bold;">
