                else {
                    failureModal();

                    $("#loader").addClass('invisible');
                    $(".full-screen-container").hide();
                    $("#pageLoader").addClass('invisible');
                }
            }),
            error: (function (data) {
                failureModal();
                $("#pageLoader").addClass('invisible');

                $("#loader").addClass('invisible');
                $(".full-screen-container").hide();
            })
        })

        $("#tab").val(1);
    }

