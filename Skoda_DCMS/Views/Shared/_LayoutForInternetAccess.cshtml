<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Forms Automation</title>
    @*@Styles.Render("~/Content/bundlecss")
        @Scripts.Render("~/bundles/bundlemodernizr")*@

    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.jqGrid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="~/Scripts/respond.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui-1.10.0.js"></script>
    <script type="text/javascript" src="~/i18n/grid.locale-en.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.jqGrid.js"></script>
    @*<script type="text/javascript" src="http://api.jquery.com/jQuery.ajax/"></script>*@
    @*<script type="text/javascript" src="~/Scripts/app/itpoverlay.js"></script>*@

    <script type="text/javascript">

        $(window).on('load', function () {
            $("#coverScreen").hide();
        });

    </script>

</head>
<body>

    <div id="coverScreen" class="LockOn">
    </div>
    <div class="container  skdfont" style="padding:10px;">

        <div class="container">

            <div id="" class="container img-rounded">
                <div class="row img-rounded headerleft">
                    <div class="col-lg-4">
                        <img src="~/Content/themes/base/images/SAVWIPL_Merger_Logo.JPG" alt="Site Logo" class="img-responsive" style="width: 100%; padding-left:10px; border:5 groove white; " />
                    </div>
                    <div class="col-lg-2">
                    </div>
                    <div class="col-lg-1">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Content/themes/base/images/eforms_logo.png" alt="Site Logo" class="img-responsive" style="width: 100%; margin-top: 20px;" />
                        </a>
                    </div>

                    <div class="col-lg-3">
                        <p class="nav navbar-text navbar-right" style="margin-top: 70px;">Hello! @ViewBag.UserDisplayName</p>
                    </div>
                    <div class="col-lg-2">
                        <a title="Logout" class="btn btn-default btn-lg navbar-right" style="margin-top: 60px;" href="@Url.Action("Logoff", "Logout")">
                            <span class="glyphicon glyphicon-off text-danger"></span> Logout
                        </a>
                    </div>
                </div>
            </div>

            <div class="row img-rounded">
                <div class="col-lg-2 sidebar-background-image img-rounded img-responsive" style="background-color:white;min-height: 1084px;">
                    <div class="navbar">
                        <ul class="nav navbar-nav">
                            <li style="color:white">
                                @*@Html.ActionLink("Home", "FormLinks", "FormLinks", new { @class = "homeimgLinkButton" })*@
                                <a href="@Url.Action("FormLinks", "FormLinks")">
                                    <img src="@Url.Content("~/Content/themes/base/images/Home_White.png")" /> Home
                                </a>
                            </li>
                            <br />
                            <li style="color:white">
                                @*@Html.ActionLink("My Requests", "UserRequest", "Request")*@
                                <a href="@Url.Action("UserRequest", "Request")">
                                    <img src="@Url.Content("~/Content/themes/base/images/MyRequests_White.png")" /> My Requests
                                </a>
                            </li>
                            <li style="color:white">
                                @*@Html.ActionLink("My Work", "MyWork", "MyWork")*@
                                <a href="@Url.Action("MyWork", "MyWork")">
                                    <img src="@Url.Content("~/Content/themes/base/images/MyWork_White.png")" /> My Work
                                </a>
                            </li>
                        </ul>

                    </div>
                    <div class="serviceDeskContact">
                        <p>Contact Service Desk in case of any queries</p>
                        <ul>
                            <li>Ext: 1234</li>
                            <li>Email: servicedeskindia@skoda-vw.co.in</li>
                        </ul>
                    </div>
                </div>

                <div class="col-lg-10 contentdiv">


                    @RenderBody()


                </div>

            </div>
            <div class="row">
                <div class="col-lg-12 ">
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Skoda Auto Volkswagen India Pvt. Ltd.</p>
                    </footer>


                    @RenderSection("scripts", required: false)
                </div>
            </div>
        </div>
    </div>

</body>
</html>
