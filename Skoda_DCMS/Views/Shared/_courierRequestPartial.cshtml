<div class="row">
    <div class="form-group col-lg-12">
        <div class="form-group col-lg-3 required right-padding">
            <label id="lblHODName" class="control-label">Name of HOD:</label>
            <div class="inner-addon right-addon">
                <i class="glyphicon glyphicon-search"></i>
                <input type="text" name="txtHODName" id="txtHODName" class="form-control" />
            </div>
        </div>
        <div class="form-group col-lg-3 right-padding">
            <label id="lblHODEmail" class="control-label">Email of HOD:</label>
            <input type="text" name="txtHODEmail" id="txtHODEmail" class="form-control" />
        </div>
        <div class="form-group col-lg-3 right-padding required">
            <label id="lblTypeOfConsignment" class="control-label">Type of Consignment:</label>
            <input type="text" name="txtTypeOfConsignment" id="txtTypeOfConsignment" class="form-control" />
        </div>
        <div class="form-group col-lg-3 required">
            <label id="lblDateOfConsignment" class="control-label">Date of Consignment:</label>
            <input type="text" name="txtDateOfConsignment" id="txtDateOfConsignment" class="form-control">
        </div>
    </div>
</div>

<div class="row">
    <div class="form-group col-lg-6 right-padding required">
        <label id="lblConsigneeName" class="control-label">Name of Consignee:</label>
        <input type="text" class="form-control" id="txtConsigneeName" name="txtConsigneeName" maxlength="100" />
    </div>
    <div class="form-group col-lg-6 required">
        <label id="lblConsigneeAddress" class="control-label">Address of Consignee:</label>
        <textarea class="form-control" rows="2" id="txtConsigneeAddress" name="txtConsigneeAddress" maxlength="500"></textarea>
    </div>
</div>
<div class="row">
    <div class="form-group col-lg-12">
        <label id="lblBusinessNeed" class="control-label">Business Reason:</label>
        <textarea class="form-control" rows="5" id="txtBusinessNeed" name="txtBusinessNeed" maxlength="500"></textarea>
    </div>
</div>

<div id="divSecurityOffice" class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapseSecOffice">Security Office - To be filled by Security Team</a>
            </h4>
        </div>
        <div id="collapseSecOffice" class="panel-collapse collapse in">
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-lg-12 right-padding">
                        <label id="lblCourierInwardSrNo" class="control-label">After submitting the request and HOD approval, the request will be sent to security team to fill up the below information. Submitter can contact security team for more details.</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-2 right-padding">
                        <label id="lblWeight" class="control-label">Weight:</label>
                        <input type="text" name="txtWeight" id="txtWeight" class="form-control" />
                    </div>
                    <div class="form-group col-lg-1 right-padding">
                        <label id="lblWeight" class="control-label">--OR--</label>
                    </div>
                    <div class="form-group col-lg-2 right-padding">
                        <label id="lblDimension" class="control-label">Dimension:</label>
                        <input type="text" name="txtDimension" id="txtDimension" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg-6 right-padding">
                        <label id="lblCourierInwardSrNo" class="control-label">Courier Inward Register Sl. No.:</label>
                        <input class="form-control" id="txtCourierInwardSrNo" name="txtCourierInwardSrNo" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="divRejectionComments" class="row" style="display: none">
    <div class="form-group col-lg-12 required">
        <label id="lblcomments" class="control-label">Rejection Comments:</label>
        <textarea class="form-control" rows="5" id="txtRejectComments" maxlength="2000"></textarea>
    </div>
</div>

