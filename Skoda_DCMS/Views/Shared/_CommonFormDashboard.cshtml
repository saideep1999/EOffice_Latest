@model Skoda_DCMS.Models.DashboardModel

<table id="dtBasicExample" class="table table-striped table-bordered table-sm display nowrap" cellspacing="0" width="100%">
    <thead>
        <tr class="status-table-row">
            <th class="th-sm">
                ID
