            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }

        else if (dropValue == 4) {
            $("#euroLabel").hide();
            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }

        else if (dropValue == 5) {
            $("#euroLabel").hide();
            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }

        else if (dropValue == 6) {
            $("#euroLabel").hide();
            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }

        else if (dropValue == 7) {
            $("#euroLabel").hide();
            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }

        else if (dropValue == 8) {
            $("#euroLabel").hide();
            $("#txtConvert").show();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }
    }

    $('#txtBudget').keyup(function (event) {
        // skip for arrow keys
        if (event.which >= 37 && event.which <= 40) return;

        // format number
        $(this).val(function (index, value) {
            return value.replace(/\D/g, "").replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        });
    });

    function getDepartment() {
        if (IsNew) {
            if (!IsEdit) {
                debugger
                var value = JSON.stringify(DNF[0]);
                var value_1 = JSON.parse(value);
                var selectedLocation = value_1.Value[0].Department;
                console.log(selectedLocation);

                $.ajax({
                    url: '/DeviationNote/Department',
                    type: 'GET',
                    data: {},
                    dataType: 'JSON',
                    success: (function (data) {
                        //locdata = data;

                        //console.log(data);
                        var s = '<option value="-1" selected disabled>Please Select Department</option>';

                        for (var i = 0; i < data.length; i++) {
