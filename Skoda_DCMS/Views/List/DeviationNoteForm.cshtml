    pageLoad();

    function pageLoad() {
        var data = "";
        if (!IsNew) {
            $(".inpDisable").attr("disabled", "disabled");
            $(".drpDisable").attr("disabled", "disabled");
        }

        if (!IsEdit) {

        }
        if (IsNew) {
            if (!IsEdit) {
                getDepartment();
                $("#txtConvert").hide();
            }
            else {
                getDepartment();
                $("#txtConvert").hide();
            }
        }
    }

    function allowNumbersOnly(e) {
        var code = (e.which) ? e.which : e.keyCode;
        if (code > 31 && (code < 48 || code > 57)) {
            e.preventDefault();
        }
    }

    function hideConvert() {
        dropValue = document.getElementById("drpCurrency").selectedIndex;
        console.log(dropValue);
        if (dropValue == 0) {
            $("#txtConvert").hide();
            $("#euroLabel").hide();
            $("#dollarLabel").hide();
            $("#rupeeLabel").hide();
        }
        else if (dropValue == 1) {
            $("#txtConvert").hide();
            $("#rupeeLabel").show();
            $("#euroLabel").hide();
            $("#dollarLabel").hide();
        }
        else if (dropValue == 2) {
            $("#dollarLabel").show();
            $("#txtConvert").show();
            $("#euroLabel").hide();
            $("#rupeeLabel").hide();
        }
        else if (dropValue == 3) {
